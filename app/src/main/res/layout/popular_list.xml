<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/popularContainerCl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/main"
    android:orientation="horizontal"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:weightSum="3">

    <ImageView
        android:id="@+id/popularImageIv"
        style="@style/movie_banner"
        android:layout_width="144dp"
        android:layout_height="192dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_weight="2"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/popularImageIv"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/popularRateTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:text="Rate"
                android:textAlignment="textEnd"
                android:textColor="#9E9E9E"
                android:textSize="10sp"
                android:textStyle="bold" />

            <RatingBar
                android:id="@+id/popularRateRb"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxWidth="20dp"
                android:numStars="5"
                android:progressTint="#FFC107"
                android:rating="3.3"
                android:secondaryProgressTint="#FFC107"
                android:stepSize="0.1" />

        </LinearLayout>

        <TextView
            android:id="@+id/popularTitleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guardians Of The Galaxy Vol. 3"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/popularInfoTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily=""
            android:text="2023 . 12A . 2h 30m"
            android:textColor="#9E9E9E"
            android:textFontWeight="800"
            android:textSize="12sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/popularGenreRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <TextView
            android:id="@+id/popularDescriptionTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Navy S.E.A.L. sniper Chris Kyle's pinpoint accuracy saves countless lives on the battlefield and turns him into a legend. Back home with his family after four tours of duty, however, Chris finds that it is the war he can't leave behind."
            android:textColor="@color/white"
            android:textSize="8sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/popularLine1Iv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/ic_shape_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/popularText1Tv"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="Director"
                android:textColor="#A2A2A2"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/popularDirectorTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="James Gunn"
                android:textColor="#2196F3"
                android:textSize="8sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/popularLine2Iv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:srcCompat="@drawable/ic_shape_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/popularText2Tv"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="Writer"
                android:textColor="#A2A2A2"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/popularWriterTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="James Gunn"
                android:textColor="#2196F3"
                android:textSize="8sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/popularLine3Iv"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:srcCompat="@drawable/ic_shape_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/popularText3Tv"
                android:layout_width="64dp"
                android:layout_height="wrap_content"
                android:text="Stars"
                android:textColor="#A2A2A2"
                android:textSize="8sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/popularStarsTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="James Gunn . James Gunn . James gunn"
                android:textColor="#2196F3"
                android:textSize="8sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/popularWatchBtn"
                style="@style/banner_btn"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/round_play_circle_24"
                android:drawablePadding="0dp"
                android:paddingLeft="16dp"
                android:paddingRight="4dp"
                android:text="Watch Now"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/popularDownloadBtn"
                style="@style/banner_btn"
                android:layout_width="0dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="4dp"
                android:layout_weight="1"
                android:drawableLeft="@drawable/round_download_for_offline_24"
                android:drawablePadding="0dp"
                android:paddingLeft="16dp"
                android:paddingRight="4dp"
                android:text="Download"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>